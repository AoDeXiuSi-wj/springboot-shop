--创建shop数据库
create database if not exists shop default character set = 'utf8';
--创建账户
create user 'shop'@'localhost' identified by 'shop';
GRANT ALL PRIVILEGES ON *.* TO 'shop'@'%'     IDENTIFIED BY 'shop' WITH GRANT OPTION;
FLUSH PRIVILEGES;

--user表
create table user
(
  uid   int auto_increment
  comment '唯一标识'
    primary key,
  uname varchar(20) not null
  comment '用户名',
  upswd varchar(50) null
  comment '密码',
  utel  varchar(11) not null
  comment '电话',
  ueml  varchar(50) null
  comment '邮箱',
  usex  int         not null
  comment '1男，2女，3保密'
)
  comment '用户表';
INSERT INTO shop.user (uid, uname, upswd, utel, ueml, usex) VALUES (2, 'wj', 'wj', '111', '222', 1);
INSERT INTO shop.user (uid, uname, upswd, utel, ueml, usex) VALUES (3, 'jw', 'jw', '333', '444', 1);
INSERT INTO shop.user (uid, uname, upswd, utel, ueml, usex) VALUES (4, 'ww', 'ww', '555', '666', 2);
INSERT INTO shop.user (uid, uname, upswd, utel, ueml, usex) VALUES (5, 'jj', 'jj', '777', '888', 2);

--role角色表
CREATE TABLE user_role
(
    rid int PRIMARY KEY COMMENT '唯一标识符' AUTO_INCREMENT,
    username varchar(20) NOT NULL COMMENT '用户名称',
    rolename varchar(20) NOT NULL COMMENT '角色名称'
);
INSERT INTO shop.user_role (rid, username, rolename) VALUES (1, 'wj', 'superadmin');
INSERT INTO shop.user_role (rid, username, rolename) VALUES (2, 'jw', 'superadmin');
INSERT INTO shop.user_role (rid, username, rolename) VALUES (3, 'ww', 'admin');
INSERT INTO shop.user_role (rid, username, rolename) VALUES (4, 'jj', 'user');
INSERT INTO shop.user_role (rid, username, rolename) VALUES (5, 'wj', 'dept');
---role_permission角色权限表
CREATE TABLE role_permission
(
    pid int PRIMARY KEY COMMENT '唯一标识符' AUTO_INCREMENT,
    rolename varchar(20) NOT NULL COMMENT '角色名称',
    permission varchar(50) NOT NULL COMMENT '权限'
);
ALTER TABLE role_permission COMMENT = '权限表';
